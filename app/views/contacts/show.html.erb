<div class="contact-show">
  <h1 class="contact-name"><%= @contact.full_name %></h1>
  <p class="contact-detail">
    Email: <a href="mailto:<%= @contact.email %>"><%= @contact.email %></a>
  </p>
  <p class="contact-detail">
    Phone: <%= @contact.phone_number %>
  </p>
  <!-- More details here -->
  <p><%= link_to 'Back to Contacts', contacts_path, class: 'btn btn-secondary' %></p>
</div>

<style>
  .contact-show {
    text-align: center;
  }

  .contact-name {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .contact-detail {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .contact-detail a {
    color: #337ab7;
    text-decoration: none;
  }
</style>

