<div class="container-sm mt-4">
    <div class="contact-show container mx-auto p-4" style="border: 1px solid #E2786F; border-radius: 10px; padding: 50px; margin: 50px auto; width: 50%;">
     <h1 class="contact-name text-center mb-4" style="text-align: center; width: 100%; font-weight: bold; color: #E2786F;"><%= @contact.full_name %></h1>

    <h2>Editar contacto <%= @contact&.full_name %></h2>

     <%= simple_form_for @contact, method: :patch do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :full_name, required: true %>
        <%= f.input :email, required: true %>
        <%= f.input :phone_number, required: true %>
        <%= f.input :address, required: true %>
      </div>

   <div class="d-flex justify-content-start ms-2">
  <%= f.button :submit, "Actualizar contacto", class: 'btn btn-danger px-4 me-3' %>
  <%= link_to "AtrÃ¡s", contacts_path, class: 'btn btn-danger px-4' %>
</div>

  <% end %>
</div>
